<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="60.0dip">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1.0dip"
                        android:shrinkColumns="0"
                        android:stretchColumns="0">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginBottom="1.0dip"
                            android:layout_toRightOf="@+id/example"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:paddingLeft="5.0dip"
                            android:text="调治构造物及特殊构造物调查表"
                            android:textColor="#ff888888"
                            android:textSize="18.0sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingTop="1.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="3"
                            android:layout_marginRight="1.0dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:text="调治构造物及特殊构造物调查"
                            android:textColor="#ff333333"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/qutuchangdiaochaEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:layout_marginRight="1.0dip"
                            android:paddingLeft="17.0dip"
                            android:text="地点:"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/qihouEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingTop="1.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:background="@drawable/shape_et_bottom_line"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="2"
                            android:layout_marginRight="1.0dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:text="起讫桩号"
                            android:textColor="#ff333333"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/qizhizhuanghaoEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:layout_marginRight="1.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:layout_marginRight="1.0dip"
                            android:paddingLeft="17.0dip"
                            android:text="地名和位置"
                            android:textColor="#ff333333"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/dimingEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/freezingDeepRow"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:background="@drawable/shape_et_bottom_line"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:background="#FFFFFF"
                            android:layout_marginRight="1.0dip"
                            android:text="其它工程名称"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/qitagongchengEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:background="@drawable/shape_et_bottom_line"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="240dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:layout_marginRight="1.0dip"
                            android:background="#FFFFFF"
                            android:text="勘测记录"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/kancejiluEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:paddingRight="20.0dip"
                            android:textColor="#ff888888"
                            android:textSize="16.0sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:background="@drawable/shape_et_bottom_line"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="320dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:layout_marginRight="1.0dip"
                            android:background="#FFFFFF"
                            android:text="地质及水文"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/dizhiEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:paddingRight="20.0dip"
                            android:textColor="#ff888888"
                            android:textSize="16.0sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/kancesuoyinRow"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:background="@drawable/shape_et_bottom_line"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="400dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:background="#FFFFFF"
                            android:layout_marginRight="1.0dip"
                            android:text="说明及草图"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/kancejilusuoyinEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingTop="1.0dip"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="1.0dip"
                        android:paddingBottom="1.0dip">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="2"
                            android:layout_marginRight="1.0dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="17.0dip"
                            android:text="记录:"
                            android:textColor="#ff333333"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/jiluEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:layout_marginRight="1.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:layout_marginRight="1.0dip"
                            android:paddingLeft="17.0dip"
                            android:text="复核:"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/fuheEditText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:textColor="#ff888888"
                            android:background="#FFFFFF"
                            android:textSize="16sp" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/geo_surebutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>



